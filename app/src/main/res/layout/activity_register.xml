<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <me.james.biuedittext.BiuEditText
            android:id="@+id/register_et_username"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:textColor="@android:color/white"
            app:biu_duration="800"
            app:biu_text_color="@android:color/white"
            app:biu_text_scale="1.5"
            app:biu_type="flyup"
            app:biu_text_start_size="18sp" />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/register_et_password"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            app:biu_duration="800"
            app:biu_text_color="@android:color/white"
            app:biu_text_scale="1.5"
            app:biu_type="flyup"
            app:biu_text_start_size="18sp" />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/register_et_pwd"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="再次确认密码"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            app:biu_duration="800"
            app:biu_text_color="@android:color/white"
            app:biu_text_scale="1.5"
            app:biu_type="flyup"
            app:biu_text_start_size="18sp" />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/register_et_sex"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="性别"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            app:biu_duration="800"
            app:biu_text_color="@android:color/white"
            app:biu_text_scale="1.5"
            app:biu_type="flyup"
            app:biu_text_start_size="18sp" />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/register_et_email"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="邮箱"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            app:biu_duration="800"
            app:biu_text_color="@android:color/white"
            app:biu_text_scale="1.5"
            app:biu_type="flyup"
            app:biu_text_start_size="18sp" />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/register_et_phone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            app:biu_duration="800"
            app:biu_text_color="@android:color/white"
            app:biu_text_scale="1.5"
            app:biu_type="flyup"
            app:biu_text_start_size="18sp" />

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/register_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="SIGN UP"
            android:textColor="@color/colorAccent"
            custom:pb_colorComplete="@color/green_complete"
            custom:pb_colorNormal="@color/blue_normal"
            custom:pb_colorPressed="@color/blue_pressed"
            custom:pb_colorProgress="@color/purple_progress"
            custom:pb_textComplete="Success"
            custom:pb_textProgress="Loading"
            custom:pb_textError="Error"
            />


    </LinearLayout>

</layout>